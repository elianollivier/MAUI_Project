<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="Elian_App.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,10"
            Spacing="20"
            x:Name="MainStack"> 
            <Image
                Source="logo.png"
                HeightRequest="80"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="Logo de l'application" />

            <Label
                Text="Titre Principal"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Sous-titre de la page d'accueil"
                Style="{StaticResource SubHeadline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2" />

            <HorizontalStackLayout
                Spacing="20"
                HorizontalOptions="Center">
                
                <Image
                    Source="image1.png"
                    WidthRequest="120"
                    HeightRequest="120"
                    Aspect="AspectFit"
                    SemanticProperties.Description="Image de gauche" />

                <Image
                    Source="image2.png"
                    WidthRequest="120"
                    HeightRequest="120"
                    Aspect="AspectFit"
                    SemanticProperties.Description="Image de droite" />
            </HorizontalStackLayout>

            <Button
                Text="Voir le GIF"
                Clicked="OnShowGifClicked"
                HorizontalOptions="Center" />

            <Image
                x:Name="AnimatedImage"
                Source="animated_image.png"
                WidthRequest="180"
                HeightRequest="180"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Opacity="0"     
                Scale="0.5"
                SemanticProperties.Description="Image Ã  animer" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
